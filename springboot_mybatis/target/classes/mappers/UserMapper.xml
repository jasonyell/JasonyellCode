<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.yell.springboot.dao.UserDao">
    <!-- 查询操作 -->
    <select id="queryUserByName" parameterType="String" resultType="com.yell.springboot.po.User">
        select * from tb_user where user_name = #{userName};
    </select>

    <!--通过id 查询-->
    <select id="queryUserById" parameterType="int" resultType="com.yell.springboot.po.User">
        select * from tb_user where user_id = #{userId}
    </select>

    <!--添加操作-->
    <insert id="addUser" parameterType="com.yell.springboot.po.User">
        insert into
        tb_user
        (user_name,user_pwd)
        values
        (#{userName},#{userPwd})
    </insert>

    <!--更新操作-->
    <update id="updateUser" parameterType="com.yell.springboot.po.User">
        update
          tb_user
        set
          user_name = #{userName},
          user_pwd = #{userPwd}
        where
          user_id = #{userId}
    </update>

    <!--删除操作-->
    <delete id="deleteUser" parameterType="int" >
        delete
        from
          tb_user
        where
          user_id = #{userId}
    </delete>

    <!--查询集合-->
    <select id="queryUserList" parameterType="com.yell.springboot.query.UserQuery"
            resultType="com.yell.springboot.po.User">
        select
          *
        from
         tb_user
        <!-- 判断条件查询是否为空，不为空则执行条件查询 -->
        <where>
            <if test="null != userName and userName !=''">
              and user_name like concat('%',#{userName},'%')
            </if>
        </where>
    </select>

</mapper>